<div class="container">
    <form class="register-form" action="/users/register" method="POST">
        <h2>Registro</h2>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password">
        </div>
        {{!-- <div class="form-group">
            <label for="confirm-password">Confirmar Contraseña:</label>
            <input type="password" id="confirm-password" name="confirm-password" >
        </div> --}}
        
        
        <!-- Campo para subir la foto -->
        <div class="form-group">
            <label for="photo">Subir foto de perfil:</label>
            <input type="file" id="photo" accept="image/*">
        </div> 

        <!-- Campo para introducir una URL de la foto -->
        <div class="form-group">
            <label for="photo-url">introducir URL de foto de perfil:</label>
            <input type="photo" id="photo-url" name="photo">
        </div>

        <button type="submit">Registrar</button>
    </form>
</div>
